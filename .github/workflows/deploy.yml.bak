name: Deploy to Ubuntu Server test.com

on:
  push:
    branches:
      - main

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
    # Step 1: Checkout the code
    - name: Checkout code
      uses: actions/checkout@v3

    # Step 2: Set up SSH
    - name: Set up SSH key
      uses: webfactory/ssh-agent@v0.5.3
      with:
        ssh-private-key: ${{ secrets.SSH_PRIVATE_KEY }}

    # Step 3: Deploy to server
    - name: Deploy to Ubuntu Server
      run: |
        echo "Starting SSH connection..."
        ssh -o StrictHostKeyChecking=no ${{ secrets.SSH_USERNAME }}@${{ secrets.SSH_HOST }} << 'EOF'
          echo "Connected to server."
          # Check if directory exists and has git
          if [ ! -d "/var/www/html/test/.git" ]; then
            echo "Cloning repository..."
            mkdir -p /var/www/html/test
            cd /var/www/html/test
            git clone git@github.com:Own-development/test-CICD.git .
          else
            echo "Pulling latest changes..."
            cd /var/www/html/test && git fetch origin main && git reset --hard origin/main
          fi
        EOF